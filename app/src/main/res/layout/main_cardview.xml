<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
         android:layout_gravity="center_horizontal"
        android:id="@+id/card_view_id"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"

    >
        <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout android:layout_width="match_parent"
                          android:id="@+id/layoutTop"
                          android:layout_height="150dp"
                          android:orientation="vertical"
                          android:background="#9E9E9E"
                          android:layout_margin="2dp"
                          android:elevation="0dp"
            >


                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Introduction to Computer"
                          android:elevation="10dp"
                          style="@style/Card_Textview"
                          tools:fontFamily="@font/cantarell_bold" android:id="@+id/title"/>


                <TextView android:layout_width="match_parent"
                          android:id="@+id/course"
                          android:layout_height="wrap_content"
                          style="@style/Header_TextView"
                          android:text="MTh122"
                          android:elevation="10dp"
                          tools:fontFamily="@font/cantarell_bold"/>

            </LinearLayout>

            <LinearLayout android:layout_width="240dp"
                          android:layout_height="50dp"
                          android:layout_marginTop="120dp"
                          android:layout_centerHorizontal="true"
                          android:orientation="horizontal"
                          android:elevation="20dp"
                          android:weightSum="3"
                          android:background="#039BE5"
            >
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                         android:padding="5dp"
                          android:text="11:23am"
                          style="@style/Card_Textview"
                          android:layout_weight="2"
                          android:layout_marginStart="1dp"

                          android:id="@+id/startTime"/>


                <View
                        android:id="@+id/divider"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="12dp"
                        android:background="#9E9E9E"
                        />

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:padding="5dp"
                          android:layout_weight="1"
                          android:layout_marginEnd="1dp"
                          android:text="12:30pm"
                          style="@style/Card_Textview"
                          android:id="@+id/endTime"/>

            </LinearLayout>


        </RelativeLayout>

        <LinearLayout android:layout_width="250dp"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:id="@+id/lndv_id"
                      android:layout_marginLeft="10dp"
                      android:layout_marginBottom="10dp"
                      android:layout_marginTop="10dp"
        >
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
            >
                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/ic_person_black_24dp"
                />
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:padding="2dp"
                          android:layout_marginTop="10dp"
                          android:text="Lecturer"
                          android:layout_marginStart="1dp"
                          style="@style/Card_Textview2"
                          android:id="@+id/lecturer"/>

            </LinearLayout>


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
            >
                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/ic_location_on_black_24dp"

                />
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:padding="3dp"
                          android:text="Venue"
                          android:layout_marginStart="1dp"
                          style="@style/Card_Textview2"
                          android:id="@+id/venue"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="bottom"
            android:layout_marginBottom="40dp"
    >


        <ImageView
                android:id="@+id/editBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/deleteBtn"
                android:layout_toLeftOf="@+id/deleteBtn"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="10dp"
                android:textAllCaps="false"
               app:srcCompat="@drawable/edit_green_18dp"
                android:padding="5dp"
                style="@style/Card_Textview"
        />
        <ImageView
                android:id="@+id/deleteBtn"
                style="@style/Card_Textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               app:srcCompat="@drawable/delete_green_24dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/editBtn"
                android:padding="5dp"
                android:layout_marginTop="35dp"
        />
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
